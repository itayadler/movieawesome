<iframe width="100%" height="100%" {{bind-attr src="youtubeSrc"}} frameborder="0" allowfullscreen></iframe>
<div class="main">
  <h1>
    {{view MA.TypeaheadTextField controllerBinding="this" selectedMovieBinding="selectedMovie" class="movie-autocomplete" placeholder="Start with a movie title.."}}
  </h1>
  <ul class="recommendations">
    {{#each movie in movieToRecommend.recommendations}}
    <li {{action 'recommendationSelected' movie}}>{{movie.movie_title}} ({{movie.production_year}})</li>
    {{else}}
    {{/each}}
  </ul>

  <footer>Movie Awesome was created by <a href="http://twitter.com/itayad">@itayad</a></footer>
</div>
